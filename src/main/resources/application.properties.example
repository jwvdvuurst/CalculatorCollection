spring.application.name=Calculator Collector
spring.thymeleaf.prefix=classpath:/templates/
spring.thymeleaf.suffix=.html
spring.thymeleaf.cache=false

# H2 Database Configuration
# Using file-based database for persistence (stored in ./data/calcol.mv.db)
spring.datasource.url=jdbc:h2:file:./data/calcol;DB_CLOSE_DELAY=-1;AUTO_SERVER=TRUE
spring.datasource.driverClassName=org.h2.Driver
spring.datasource.username=sa
spring.datasource.password=
spring.h2.console.enabled=true
spring.h2.console.path=/h2-console
spring.jpa.database-platform=org.hibernate.dialect.H2Dialect
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=false
spring.jpa.properties.hibernate.format_sql=true

# File Upload Configuration
spring.servlet.multipart.enabled=true
spring.servlet.multipart.max-file-size=10MB
spring.servlet.multipart.max-request-size=10MB

# Upload Directory
app.upload.dir=uploads

# Base URL for generating absolute URLs (leave empty for auto-detection)
app.base-url=

# Search API Configuration
# Google Custom Search API (optional)
# Get your API key from: https://console.cloud.google.com/apis/credentials
# Get your Search Engine ID from: https://programmablesearchengine.google.com/controlpanel/all
app.search.google.api-key=
app.search.google.search-engine-id=

# Bing Search API (optional)
# Get your API key from: https://www.microsoft.com/en-us/bing/apis/bing-image-search-api
# Note: Bing Search APIs are scheduled for retirement on August 11, 2025
app.search.bing.api-key=

# Brave Search API (optional)
# Get your API key from: https://api.search.brave.com/
app.search.brave.api-key=

# AI Search API (optional - supports OpenAI or Anthropic)
# OpenAI: Get your API key from: https://platform.openai.com/api-keys
# Anthropic: Get your API key from: https://console.anthropic.com/
app.search.ai.api-key=
app.search.ai.provider=openai

# OpenAPI/Swagger Configuration
springdoc.api-docs.path=/api-docs
springdoc.swagger-ui.path=/swagger-ui.html

# Quota Configuration
# Rate limits (queries per second)
app.quota.brave.rate-limit=1
app.quota.google.rate-limit=10
app.quota.bing.rate-limit=10
app.quota.ai.rate-limit=5

# Monthly limits (queries per month)
app.quota.brave.monthly-limit=2000
app.quota.google.monthly-limit=10000
app.quota.bing.monthly-limit=10000
app.quota.ai.monthly-limit=5000

